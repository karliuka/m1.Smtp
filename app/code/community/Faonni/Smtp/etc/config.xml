<config>
    <modules>
        <Faonni_Smtp>
             <version>1.1.2</version>
        </Faonni_Smtp>
    </modules>
    <global>
		<blocks>
			<faonni_smtp>
                <class>Faonni_Smtp_Block</class>
            </faonni_smtp>
        </blocks>		
        <helpers>
            <faonni_smtp>
                <class>Faonni_Smtp_Helper</class>
            </faonni_smtp>
        </helpers>	
        <models>
            <faonni_smtp>
                <class>Faonni_Smtp_Model</class>
            </faonni_smtp>
            <core>
                <rewrite>
                    <email_template>Faonni_Smtp_Model_Core_Email_Template</email_template>
                </rewrite>
            </core>
        </models>
    </global>
	<admin>
		<routers>
			<adminhtml>
				<args>
					<modules>
						<Faonni_Smtp before="Mage_Adminhtml">Faonni_Smtp_Adminhtml</Faonni_Smtp>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>
	<adminhtml>
		<layout>
			<updates>
				<faonni_smtp>
					<file>faonni/smtp.xml</file>
				</faonni_smtp>
			</updates>
		</layout>
	</adminhtml>	   
    <default>
        <system>
            <smtp>
                <port>465</port>
                <enabled>1</enabled>
                <ssl>ssl</ssl>
                <auth>login</auth>
                <pass backend_model="adminhtml/system_config_backend_encrypted"/>
            </smtp>
        </system>
</default>    
</config>
