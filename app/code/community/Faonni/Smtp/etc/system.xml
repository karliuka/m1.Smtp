<config>
    <sections>
        <system>
            <groups>
                <smtp_email translate="label" module="faonni_smtp">
                    <label>Smtp Setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>999</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <is_enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </is_enabled>
                        <username translate="label">
                            <label>Username</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><is_enabled>1</is_enabled></depends>
                        </username>
                        <password translate="label">
                            <label>Password</label>
                            <frontend_type>password</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><is_enabled>1</is_enabled></depends>
                        </password>
                        <auth translate="label">
                            <label>Authentication type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>faonni_smtp/system_config_source_auth</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><is_enabled>1</is_enabled></depends>
                        </auth>
                        <ssl translate="label">
                            <label>SSL type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>faonni_smtp/system_config_source_ssl</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><is_enabled>1</is_enabled></depends>
                        </ssl>
                        <host translate="label comment">
                            <label>Host</label>
                            <comment>Remote smtp hostname or i.p.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><is_enabled>1</is_enabled></depends>
                        </host>
                        <name translate="label comment">
                            <label>Name</label>
                            <comment>Local client hostname or i.p., default localhost.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><is_enabled>1</is_enabled></depends>
                        </name>
                        <port translate="label comment">
                            <label>Port number</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><is_enabled>1</is_enabled></depends>
                        </port>
                    </fields>
                </smtp_email>
            </groups>
        </system>
    </sections>
</config>
